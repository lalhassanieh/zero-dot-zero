{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}
{% assign newsletter_form_class = 'ai-newsletter-form-' | append: ai_gen_id %}

{% style %}
  .ai-banner-row-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    width: 100%;
  }

  .ai-banner-item-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    min-height: {{ block.settings.banner_height }}px;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-banner-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-banner-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .ai-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    padding: 30px;
    color: {{ block.settings.text_color }};
    width: 100%;
  }

  .ai-banner-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    margin: 0 0 {{ block.settings.title_margin_bottom }}px 0;
    line-height: 1.2;
  }

  .ai-banner-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    text-transform: {{ block.settings.button_text_transform }};
    line-height: 1;
    box-sizing: border-box;
    vertical-align: middle;
  }

  .ai-banner-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-banner-button-{{ ai_gen_id }}[type="button"] {
    cursor: pointer;
    font-family: inherit;
    margin: 0;
    line-height: 1;
  }

  .ai-newsletter-wrap-{{ ai_gen_id }} {
    margin-top: 16px;
    transition: all 0.3s ease;
  }

  .ai-newsletter-success-{{ ai_gen_id }} {
    display: none;
    margin-top: 16px;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: rgba(0, 0, 0, 0.3);
    color: {{ block.settings.text_color }};
    border-radius: 30px;
    text-align: center;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
  }

  .ai-newsletter-success-{{ ai_gen_id }}.show {
    display: block;
  }

  .ai-newsletter-errors-{{ ai_gen_id }} {
    display: none !important;
  }

  .ai-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }

  .ai-newsletter-form-{{ ai_gen_id }} input[type="email"] {
    flex: 1;
    min-width: 310px;
    padding: 12px 14px;
    border-radius: 30px;
    border: 1px solid rgba(255, 255, 255, 0.35);
    background: rgba(255, 255, 255, 0.12);
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    line-height: 1;
  }

  .ai-newsletter-form-{{ ai_gen_id }} input[type="email"]::placeholder {
    color: rgba(255, 255, 255, 0.7);
  }

  .ai-newsletter-form-{{ ai_gen_id }} input[type="email"]:focus {
    outline: none;
    border-color: rgba(255, 255, 255, 0.6);
    background: rgba(255, 255, 255, 0.18);
  }

  .ai-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 12px;
    color: #666;
    text-align: center;
    z-index: 4;
  }

  @media screen and (max-width: 768px) {
    .ai-banner-row-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-banner-item-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_banner_height }}px;
    }

    .ai-banner-content-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-banner-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_title_size }}px;
    }

    .ai-banner-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_button_font_size }}px;
    }

    .ai-newsletter-form-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-newsletter-form-{{ ai_gen_id }} input[type="email"] {
      min-width: 100%;
      width: 100%;
      font-size: {{ block.settings.mobile_button_font_size }}px;
    }
  }
{% endstyle %}

<div class="ai-banner-row-{{ ai_gen_id }}" data-newsletter-banner {{ block.shopify_attributes }}><div class="ai-banner-item-{{ ai_gen_id }}" data-banner-item>
    {% if block.settings.banner_1_image %}
      <img
        src="{{ block.settings.banner_1_image | image_url: width: 800 }}"
        alt="{{ block.settings.banner_1_image.alt | escape }}"
        class="ai-banner-background-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.banner_1_image.width }}"
        height="{{ block.settings.banner_1_image.height }}"
      >
    {% else %}
      <div class="ai-banner-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}<div class="ai-banner-empty-state-{{ ai_gen_id }}">
          Add background image for banner 1
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="ai-banner-overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-banner-content-{{ ai_gen_id }}">
      {% if block.settings.banner_1_title != blank %}
        <h2 class="ai-banner-title-{{ ai_gen_id }}">{{ block.settings.banner_1_title }}</h2>
      {% endif %}

      {% if block.settings.banner_1_button_text != blank %}
        {% if block.settings.banner_1_enable_subscribe %}
          {% if customer and customer.accepts_marketing %}
            <div class="ai-newsletter-success-{{ ai_gen_id }}" data-newsletter-success style="display:block; margin-top: 0;">
              {{ 'sections.dual_banners.subscribed_success' | t }}
            </div>
          {% else %}
            <button type="button" class="ai-banner-button-{{ ai_gen_id }}" data-toggle-newsletter>
              {{ block.settings.banner_1_button_text }}
            </button>
          {% endif %}
        {% elsif block.settings.banner_1_button_link != blank %}
          <a href="{{ block.settings.banner_1_button_link }}" class="ai-banner-button-{{ ai_gen_id }}">
            {{ block.settings.banner_1_button_text }}
          </a>
        {% endif %}
      {% endif %}

      {% if block.settings.banner_1_enable_subscribe %}
        {% unless customer and customer.accepts_marketing %}
          <div class="ai-newsletter-wrap-{{ ai_gen_id }}" data-newsletter-wrap style="display:none;">
            {%- form 'customer', class: newsletter_form_class -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <input
                type="email"
                name="contact[email]"
                required
                placeholder="{{ 'sections.dual_banners.email_placeholder' | t | default: block.settings.banner_1_email_placeholder | default: 'Your email address' }}"
                value="{% if customer %}{{ customer.email }}{% endif %}"
              >
              <button type="submit" class="ai-banner-button-{{ ai_gen_id }}">
                {{ 'sections.dual_banners.subscribe' | t | default: block.settings.banner_1_subscribe_button_label }}
              </button>
            {%- endform -%}
            <div class="ai-newsletter-success-{{ ai_gen_id }}" data-newsletter-success>
              {{ 'sections.dual_banners.subscribed_success' | t }}
            </div>
          </div>
          <div class="ai-newsletter-errors-{{ ai_gen_id }}" data-newsletter-errors style="display:none;"></div>
        {% endunless %}
      {% endif %}
    </div>
  </div><div class="ai-banner-item-{{ ai_gen_id }}" data-banner-item>
    {% if block.settings.banner_2_image %}
      <img
        src="{{ block.settings.banner_2_image | image_url: width: 800 }}"
        alt="{{ block.settings.banner_2_image.alt | escape }}"
        class="ai-banner-background-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.banner_2_image.width }}"
        height="{{ block.settings.banner_2_image.height }}"
      >
    {% else %}
      <div class="ai-banner-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-banner-empty-state-{{ ai_gen_id }}">
          Add background image for banner 2
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="ai-banner-overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-banner-content-{{ ai_gen_id }}">
      {% if block.settings.banner_2_title != blank %}
        <h2 class="ai-banner-title-{{ ai_gen_id }}">{{ block.settings.banner_2_title }}</h2>
      {% endif %}

      {% if block.settings.banner_2_button_text != blank and block.settings.banner_2_button_link != blank %}
        <a href="{{ block.settings.banner_2_button_link }}" class="ai-banner-button-{{ ai_gen_id }}">
          {{ block.settings.banner_2_button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<script src="{{ 'bi-custom.js' | asset_url }}" defer></script>

