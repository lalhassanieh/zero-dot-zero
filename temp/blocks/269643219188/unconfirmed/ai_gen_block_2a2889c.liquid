{% doc %}
  @prompt
    Need to have a row that contain 2 image banner block that contain title and button and background image

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-banner-row-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.gap }}px;
    width: 100%;
  }

  .ai-banner-item-{{ ai_gen_id }} {
    flex: 1;
    position: relative;
    min-height: {{ block.settings.banner_height }}px;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-banner-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-banner-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .ai-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    padding: 30px;
    color: {{ block.settings.text_color }};
    width: 100%;
  }

  .ai-banner-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    margin: 0 0 {{ block.settings.title_margin_bottom }}px 0;
    line-height: 1.2;
  }

  .ai-banner-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};}

  .ai-banner-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 12px;
    color: #666;
    text-align: center;
    z-index: 4;
  }

  @media screen and (max-width: 768px) {
    .ai-banner-row-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-banner-item-{{ ai_gen_id }} {
      min-height: {{ block.settings.mobile_banner_height }}px;
    }

    .ai-banner-content-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-banner-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_title_size }}px;
    }

    .ai-banner-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_button_font_size }}px;
    }
  }
{% endstyle %}

<div class="ai-banner-row-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-banner-item-{{ ai_gen_id }}">
    {% if block.settings.banner_1_image %}
      <img
        src="{{ block.settings.banner_1_image | image_url: width: 800 }}"
        alt="{{ block.settings.banner_1_image.alt | escape }}"
        class="ai-banner-background-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.banner_1_image.width }}"
        height="{{ block.settings.banner_1_image.height }}"
      >
    {% else %}
      <div class="ai-banner-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-banner-empty-state-{{ ai_gen_id }}">
          Add background image for banner 1
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="ai-banner-overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-banner-content-{{ ai_gen_id }}">
      {% if block.settings.banner_1_title != blank %}
        <h2 class="ai-banner-title-{{ ai_gen_id }}">{{ block.settings.banner_1_title }}</h2>
      {% endif %}

      {% if block.settings.banner_1_button_text != blank and block.settings.banner_1_button_link != blank %}
        <a href="{{ block.settings.banner_1_button_link }}" class="ai-banner-button-{{ ai_gen_id }}">
          {{ block.settings.banner_1_button_text }}
        </a>
      {% endif %}
    </div>
  </div>

  <div class="ai-banner-item-{{ ai_gen_id }}">
    {% if block.settings.banner_2_image %}
      <img
        src="{{ block.settings.banner_2_image | image_url: width: 800 }}"
        alt="{{ block.settings.banner_2_image.alt | escape }}"
        class="ai-banner-background-{{ ai_gen_id }}"
        loading="lazy"
        width="{{ block.settings.banner_2_image.width }}"
        height="{{ block.settings.banner_2_image.height }}"
      >
    {% else %}
      <div class="ai-banner-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-banner-empty-state-{{ ai_gen_id }}">
          Add background image for banner 2
        </div>
      </div>
    {% endif %}

    {% if block.settings.show_overlay %}
      <div class="ai-banner-overlay-{{ ai_gen_id }}"></div>
    {% endif %}

    <div class="ai-banner-content-{{ ai_gen_id }}">
      {% if block.settings.banner_2_title != blank %}
        <h2 class="ai-banner-title-{{ ai_gen_id }}">{{ block.settings.banner_2_title }}</h2>
      {% endif %}

      {% if block.settings.banner_2_button_text != blank and block.settings.banner_2_button_link != blank %}
        <a href="{{ block.settings.banner_2_button_link }}" class="ai-banner-button-{{ ai_gen_id }}">
          {{ block.settings.banner_2_button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

